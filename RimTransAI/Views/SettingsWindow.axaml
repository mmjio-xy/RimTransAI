<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RimTransAI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="520" d:DesignHeight="500"
        x:Class="RimTransAI.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Title="设置"
        Width="520"
        Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="Full"
        ExtendClientAreaToDecorationsHint="True"
        Background="{DynamicResource SemiColorBackground0}">

    <Grid RowDefinitions="Auto, *, Auto" Margin="0,30,0,0">
        <!-- 标题 -->
        <TextBlock Grid.Row="0"
                   Text="参数设置"
                   Classes="H4"
                   Theme="{DynamicResource TitleTextBlock}"
                   Margin="25,15,25,10"/>

        <!-- TabControl 选项卡 -->
        <TabControl Grid.Row="1" Margin="25,0,25,0">

            <!-- 基本设置选项卡 -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Path Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"
                              Fill="{DynamicResource SemiColorText0}"
                              Width="16"
                              Height="16"
                              Stretch="Uniform"
                              VerticalAlignment="Center"/>
                        <TextBlock Text="基本设置" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5,15,5,5">
                    <StackPanel Spacing="20">

                        <!-- 界面主题 -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="界面主题 (Theme)" Classes="Tertiary"/>
                            <ComboBox SelectedIndex="{Binding SelectedThemeIndex}" HorizontalAlignment="Stretch">
                                <ComboBoxItem>浅色模式 (Light)</ComboBoxItem>
                                <ComboBoxItem>深色模式 (Dark)</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!-- 目标语言 -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="目标语言" Classes="Tertiary"/>
                            <ComboBox SelectedIndex="{Binding SelectedLanguageIndex}" HorizontalAlignment="Stretch">
                                <ComboBoxItem>简体中文 (Simplified)</ComboBoxItem>
                                <ComboBoxItem>繁体中文 (Traditional)</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!-- Assembly-CSharp.dll 路径（必填） -->
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Assembly-CSharp.dll 路径" Classes="Tertiary"/>
                                <TextBlock Text=" *" Foreground="#E53935" FontWeight="Bold"/>
                            </StackPanel>
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBox Grid.Column="0"
                                         Text="{Binding AssemblyCSharpPath}"
                                         Watermark="选择 Assembly-CSharp.dll 文件路径"
                                         IsReadOnly="True"
                                         Margin="0,0,10,0"/>
                                <Button Grid.Column="1"
                                        Content="浏览..."
                                        Command="{Binding SelectAssemblyCSharpFileCommand}"
                                        Theme="{DynamicResource OutlineButton}"/>
                            </Grid>
                            <TextBlock Text="用于反射提取游戏内定义，提升翻译准确性"
                                       FontSize="12" Foreground="{DynamicResource SemiColorText3}"/>
                        </StackPanel>

                        <!-- 调试模式 -->
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="*, Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="调试模式 (Debug Mode)" Classes="Tertiary"/>
                                    <TextBlock Text="开启后将记录详细的调试日志，便于排查问题"
                                               FontSize="12" Foreground="{DynamicResource SemiColorText3}"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1"
                                              IsChecked="{Binding DebugMode}"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- API 设置选项卡 -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <Path Data="M19.35,10.04C18.67,6.59,15.64,4,12,4C9.11,4,6.6,5.64,5.35,8.04C2.34,8.36,0,10.91,0,14c0,3.31,2.69,6,6,6h13c2.76,0,5-2.24,5-5C24,12.36,21.95,10.22,19.35,10.04z"
                              Fill="{DynamicResource SemiColorText0}"
                              Width="16"
                              Height="16"
                              Stretch="Uniform"
                              VerticalAlignment="Center"/>
                        <TextBlock Text="API 设置" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5,15,5,5">
                    <StackPanel Spacing="20">

                        <!-- API 地址（必填） -->
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="API 地址 (Base URL)" Classes="Tertiary"/>
                                <TextBlock Text=" *" Foreground="#E53935" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBox Text="{Binding ApiUrl}" Watermark="例如: https://api.openai.com/v1/chat/completions"/>
                            <TextBlock Text="提示: 使用 DeepSeek 时通常填 https://api.deepseek.com"
                                       FontSize="12" Foreground="{DynamicResource SemiColorText3}"/>
                        </StackPanel>

                        <!-- API Key（必填） -->
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="API Key (令牌)" Classes="Tertiary"/>
                                <TextBlock Text=" *" Foreground="#E53935" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBox Text="{Binding ApiKey}" PasswordChar="*" Watermark="sk-..." Classes="RevealPasswordButton"/>
                        </StackPanel>

                        <!-- 模型名称（必填） -->
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="模型名称 (Model)" Classes="Tertiary"/>
                                <TextBlock Text=" *" Foreground="#E53935" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBox Text="{Binding TargetModel}" Watermark="例如: gpt-3.5-turbo / deepseek-chat"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- 底部按钮区域 -->
        <Border Grid.Row="2" Padding="25,15,25,20">
            <StackPanel>
                <!-- 验证错误提示 -->
                <TextBlock Text="{Binding ValidationError}"
                           Foreground="#E53935"
                           FontSize="13"
                           Margin="0,0,0,10"
                           TextWrapping="Wrap"
                           IsVisible="{Binding HasValidationError}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="15">
                    <Button Content="取消"
                            Command="{Binding CancelCommand}"
                            Theme="{DynamicResource TertiaryButton}"/>
                    <Button Content="保存配置"
                            Command="{Binding SaveAndCloseCommand}"
                            Theme="{DynamicResource SolidButton}"
                            Classes="Primary"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
