<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:RimTransAI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="360" d:DesignHeight="700"
             x:Class="RimTransAI.Views.ModInfoPanel"
             x:DataType="vm:ModInfoViewModel"
             Width="360">

    <!-- 浮动面板容器 -->
    <Border Background="{DynamicResource SemiColorBackground0}"
            BorderBrush="{DynamicResource SemiColorBorder}"
            BorderThickness="1"
            CornerRadius="0"
            BoxShadow="-4 0 24 0 #60000000">

        <Grid RowDefinitions="Auto, *">

            <!-- 标题栏 -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SemiColorFill0}"
                    BorderBrush="{DynamicResource SemiColorBorder}"
                    BorderThickness="0,0,0,1"
                    Padding="16,12">
                <Grid ColumnDefinitions="*, Auto">
                    <TextBlock Grid.Column="0"
                               Text="Mod 信息"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SemiColorText1}" />

                    <!-- <Button Grid.Column="1" -->
                    <!--         Command="{Binding $parent[UserControl].((vm:MainWindowViewModel)DataContext).CloseModInfoPanelCommand}" -->
                    <!--         Width="28" -->
                    <!--         Height="28" -->
                    <!--         Background="Transparent" -->
                    <!--         ToolTip.Tip="关闭"> -->
                    <!--     <TextBlock Text="✕" -->
                    <!--                FontSize="14" -->
                    <!--                HorizontalAlignment="Center" -->
                    <!--                VerticalAlignment="Center" /> -->
                    <!-- </Button> -->
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="16" Margin="20,16,20,16">

                    <!-- 1. 预览图区域 -->
                    <Border CornerRadius="8" ClipToBounds="True" Padding="16">
                        <Image Source="{Binding PreviewImage}"
                               Stretch="Uniform"
                               Height="200"
                               Width="328"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top" />
                    </Border>

                    <!-- 2. 基础信息卡片 -->
                    <Border Background="{DynamicResource SemiColorFill0}"
                            BorderBrush="{DynamicResource SemiColorBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            MaxWidth="400"
                            Padding="16">
                        <StackPanel Spacing="8">
                            <!-- Mod 名称 -->
                            <TextBlock Text="{Binding Name}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SemiColorText1}" />

                            <!-- 作者 -->
                            <TextBlock Text="{Binding Author, StringFormat='作者: {0}'}"
                                       FontSize="13"
                                       Foreground="{DynamicResource SemiColorText2}" />

                            <!-- 描述 -->
                            <TextBlock Text="{Binding Description}"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       LineHeight="18"
                                       Foreground="{DynamicResource SemiColorText2}" />
                        </StackPanel>
                    </Border>

                    <!-- 3. 扩展信息卡片 -->
                    <Border Background="{DynamicResource SemiColorFill0}"
                            BorderBrush="{DynamicResource SemiColorBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="12">
                            <!-- 包 ID -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="包 ID"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SemiColorText3}" />
                                <TextBlock Text="{Binding PackageId}"
                                           FontFamily="Consolas,Courier New"
                                           FontSize="11"
                                           Foreground="{DynamicResource SemiColorText1}"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <!-- 项目主页 -->
                            <StackPanel Spacing="4"
                                        IsVisible="{Binding HasUrl}">
                                <TextBlock Text="项目主页"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SemiColorText3}" />
                                <Button Content="{Binding Url}"
                                        Command="{Binding OpenUrlCommand}"
                                        Theme="{DynamicResource HyperlinkButton}"
                                        Foreground="{DynamicResource SemiColorPrimary}"
                                        FontSize="12"
                                        Padding="0"
                                        HorizontalAlignment="Left" />
                            </StackPanel>

                            <!-- 支持版本 -->
                            <StackPanel Spacing="4"
                                        IsVisible="{Binding HasSupportedVersions}">
                                <TextBlock Text="支持版本"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SemiColorText3}" />
                                <ItemsControl ItemsSource="{Binding SupportedVersions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource SemiColorPrimary}"
                                                    CornerRadius="4"
                                                    Padding="6,3"
                                                    Margin="0,0,6,6">
                                                <TextBlock Text="{Binding}"
                                                           Foreground="White"
                                                           FontSize="11" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- 4. Mod 路径卡片 -->
                    <Border Background="{DynamicResource SemiColorFill0}"
                            BorderBrush="{DynamicResource SemiColorBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Mod 路径"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SemiColorText3}" />

                            <Button Command="{Binding OpenFolderCommand}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Theme="{DynamicResource TertiaryButton}"
                                    Padding="8">
                                <TextBlock Text="{Binding FolderPath}"
                                           FontSize="11"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource SemiColorText1}" />
                            </Button>

                            <TextBlock Text="点击打开文件夹"
                                       FontSize="10"
                                       Foreground="{DynamicResource SemiColorText3}" />
                        </StackPanel>
                    </Border>

                    <!-- 5. 依赖关系卡片 -->
                    <Border Background="{DynamicResource SemiColorFill0}"
                            BorderBrush="{DynamicResource SemiColorBorder}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            IsVisible="{Binding HasDependencies}">
                        <Expander Header="{Binding DependenciesHeader}"
                                  IsExpanded="False"
                                  HorizontalAlignment="Stretch">
                            <ItemsControl ItemsSource="{Binding Dependencies}"
                                          Margin="0,8,0,16">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SemiColorBackground0}"
                                                BorderBrush="{DynamicResource SemiColorBorder}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="10,6"
                                                Margin="0,0,0,6">
                                            <StackPanel Spacing="3">
                                                <TextBlock Text="{Binding DisplayName}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource SemiColorText1}" />
                                                <TextBlock Text="{Binding PackageId}"
                                                           FontFamily="Consolas,Courier New"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource SemiColorText3}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>